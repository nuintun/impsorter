{
  "compilerOptions": {
    "lib": ["es6"],
    "pretty": true,
    "rootDir": ".",
    "target": "es6",
    "outDir": "out",
    "newLine": "LF",
    "sourceMap": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", ".vscode-test"]
}
